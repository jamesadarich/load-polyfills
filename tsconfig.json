{
    "compilerOptions": {
       "target": "es5",
       "module": "commonjs",
       "moduleResolution": "node",
       "allowJs": true,
       "esModuleInterop": true,
       "strict": true,
       "noImplicitAny": true,
       "declaration": true,
       "sourceMap": false,
       "preserveConstEnums": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "newLine": "LF",
       "jsx": "react",
       "lib": [
           "dom",
           "es5",
           "es2015.promise"
       ],
       "outDir": "./dist"
    },
    "exclude": [
       "./node_modules"
    ],
    "include": [
       "./**/*.ts"
    ]
 }
 